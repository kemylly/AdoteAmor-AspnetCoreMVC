@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Criar uma nova conta</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Senha</p>
                @* <label asp-for="Input.Password"></label> *@
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Confirmar senha</p>
                @* <label asp-for="Input.ConfirmPassword"></label> *@
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Nome completo</p>
                <input asp-for="Input.NomeCompleto" class="form-control" />
                <span asp-validation-for="Input.NomeCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Tipo</p>
                @* <input asp-for="Input.Tipo" class="form-control" /> *@
                <select asp-for="Input.Tipo" class="custom-select mr-sm-2">
                      <option value="Doar">Doar</option>
                      <option value="Adotar">Adotar</option>
                     <!-- <option value="Veterinario">Veterinario</option> -->
              </select>
                <span asp-validation-for="Input.Tipo" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Seja bem vindo</h4>
            <hr />
            <img src="~/img/doarB.png" alt="Banner Adote Amor" width="100%" height="100%">
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
